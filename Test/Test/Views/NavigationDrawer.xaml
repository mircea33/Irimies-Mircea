<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Views.NavigationDrawer" >
    <MasterDetailPage.Master>
            <ContentPage Title="Options" Icon="hamburger.png">
            <StackLayout BackgroundColor="{DynamicResource Primary}">
                <Label Text="Applied Philosophy" TextColor="{DynamicResource Secondary}"/>
                <ListView x:Name="menu"  SeparatorColor="{DynamicResource Secondary}" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage>
            <Label Text="Detail" TextColor="Black"/>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>