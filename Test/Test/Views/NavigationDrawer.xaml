            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage>
            <Label Text="Detail" TextColor="Black"/>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>