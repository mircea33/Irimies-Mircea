             x:Class="Test.Views.NavigationDrawer"
             Title="Master detail page for navigation">
   
    <MasterDetailPage.Master>
        <ContentPage Title="Options" Icon="hamburger.png">
            <ListView x:Name="menu"  SeparatorColor="Gray"/>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage>
            <Label Text="Detail" TextColor="Black"/>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>