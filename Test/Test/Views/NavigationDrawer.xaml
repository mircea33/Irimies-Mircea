             x:Class="Test.Views.NavigationDrawer" >
    <MasterDetailPage.Master>
        <ContentPage Title="Options" Icon="hamburger.png">
            <StackLayout>
                <Label Text="Asta va aparea in slider?" TextColor="{DynamicResource Primary}"/>
                <ListView x:Name="menu"  SeparatorColor="SaddleBrown" BackgroundColor="White">
