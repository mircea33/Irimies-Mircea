<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Views.Login">
    <ContentPage.Content>
        <StackLayout 
            VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Label Text="Welcome to applied philosophy"/>
            <Entry x:Name="UsernameEmailAccount" Placeholder="Username/Email" />
            <Entry x:Name="Password_account" Placeholder="Password" IsPassword="True"/>
            <Button x:Name="LoginButton" Text="Login" />
            <Button x:Name="SignupButton_LoginPage" Text="Sign up"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>