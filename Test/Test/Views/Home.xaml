<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Test.Views.Home"
    Title="Home Page">
    <CarouselPage.ItemTemplate>
        <DataTemplate>
            <ContentPage Title="{Binding Philosopher}">
                <ContentPage.Content>
                    <StackLayout   HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand"  >
                        <Label Text="{Binding Philosopher}"/>
                        <Label Text="{Binding Quote}"/>
                        <ListView x:Name="hh" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </ContentPage.Content>
            </ContentPage>
        </DataTemplate>
    </CarouselPage.ItemTemplate>
</CarouselPage>